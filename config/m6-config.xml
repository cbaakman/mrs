	<parser id="mediawiki">
		<match regex="&lt;title&gt;(.+)&lt;/title&gt;" capture="1">
			<index name="title" type="string"/>
			<attr name="title"/>
		</match>
		<match regex="&lt;text.+?&gt;((?:.|\n)+)&lt;/text&gt;" capture="1">
			<index name="text"/>
		</match>
	</parser>
	
